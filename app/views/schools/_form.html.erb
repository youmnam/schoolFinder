      </div>
      <div class="input-group input-group-icon">
        <%= form.text_field :admission_email, id: :school_admission_email, placeholder: "Admission Office email" %>
        <div class="input-icon"><i class="fa fa-pencil-square-o"></i></div>
      </div>
      
      <h4>School System Info</h4>
      <div class="input-group input-group-icon">
          <%= form.text_field :school_feesRange, id: :school_school_feesRange,  placeholder: "Average Fees/Year" %>
          <div class="input-icon"><i class="fa fa-credit-card"></i></div>
      </div>      
      
      <div class="col-half">
        <div class="input-group input-group-icon">
         <%= form.text_field :school_eduSystem, id: :school_school_eduSystem,  placeholder: "Education System" %>
          <div class="input-icon"><i class="fa fa-graduation-cap"></i></div>
        </div>
      </div>

      <div class="col-half">
        <div class="input-group input-group-icon">
         <%= form.text_field :school_curriculum, id: :school_school_curriculum,  placeholder: "Curriculum Type" %>
          <div class="input-icon"><i class="fa fa-book"></i></div>
        </div>
      </div>
      </div>
      
      <div class="row">
          <div class="input-group ">   
             <%= form.check_box :school_foreignTeachers, id: :school_school_foreignTeachers %>
             <%= form.label :school_foreignTeachers, " Foreign Teachers"  %>
            </div>
             <div class="input-group input-group-icon">
         <%= form.text_field :school_availableGrades, id: :school_school_availableGrades,  placeholder: "Grades Available till? (8,12?)" %>
          <div class="input-icon"><i class="fa fa-cubes"></i></div>
        </div>
           <div class="input-group input-group-icon">
         <%= form.text_field :school_age, id: :school_school_age,  placeholder: "Founded at (eg. 1990)" %>
          <div class="input-icon"><i class="fa fa-history"></i></div>
        </div>
      </div>
  

      <h4>School Facilities</h4>
      <div class="input-group">
          <%= form.check_box :school_cafeteria, id: :school_school_cafeteria %>
          <%= form.label :school_cafeteria %>
      </div>

     <div class="input-group">
    <%= form.check_box :school_soccerPlayground, id: :school_school_soccerPlayground %>
    <%= form.label :school_soccerPlayground %>
      </div>

           <div class="input-group">

    <%= form.check_box :school_InnovationSpaces, id: :school_school_InnovationSpaces %>
    <%= form.label :school_InnovationSpaces %>
      </div>

           <div class="input-group">
    <%= form.check_box :school_theater, id: :school_school_theater %>
        <%= form.label :school_theater %>
      </div>


           <div class="input-group">
    <%= form.check_box :school_computerLabs, id: :school_school_computerLabs %>
               <%= form.label :school_computerLabs %>

      </div>

           <div class="input-group">
    <%= form.check_box :school_scienceLab, id: :school_school_scienceLab %>
           <%= form.label :school_scienceLab %>
      </div>

           <div class="input-group">
    <%= form.check_box :school_library, id: :school_school_library %>
     <%= form.label :school_library %>
      </div>

           <div class="input-group">

    <%= form.check_box :school_swimmingPool, id: :school_school_swimmingPool %>
<%= form.label :school_swimmingPool %>
      </div>

    </div>

   <div class="input-group">
    <%= form.label :school_logo %>
    <%= form.file_field :school_logo, multiple: false %>
</div>


   <div class="input-group">
    <%= form.label :school_images %>
    <%= form.file_field :school_images, multiple: true %>
</div>

  <div class="actions">
    <%= form.submit %>
  </div>

  <% end %>
</div>

<% content_for :javascript_includes do %>
  <%= javascript_include_tag "rails.validations.js" %>
<% end %>

