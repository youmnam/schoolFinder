<script>
var select1 = document.getElementById("select1");
var select2 = document.getElementById("select2");
var cairo = ['abo Rawash' , 'Azhar' ,'Tagomaa khames','El Tahrir', 'El Tahrir' ,'El Rehab' ,'Zaytoon' ,'Sayeda Nafisa' , 'Kasr El Eini' , 'Citadel (El-Kal3a)' ,'Maadi' , 'New Maadi' ,'Mokattam' ,'New Nozha' , 'Amiria' ,'Basateen' ,'Boulak Abo el Eila' ,'Boulak EL Dakroor' ,'Garden City' , 'Hadaiq Al-Qubba' ,'Helmeya' ,'Ramsis','Zamalek','Shoubra','Shoubra El khema','Sharabeya','Daher','Abbasiyya','Ain Shams','Ghamra','Kattamia','15th of May City','Obour City','Nasr City','Masaken Sheraton','Misr El-Kadima','Matareya','Manyal','Heliopolis','Down Town']
