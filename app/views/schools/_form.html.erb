                </div>
          <div class="col-half">
            <div class="input-group ">
                  <select name="school[school_area]" id="select2" style="width:100%"> 
                        <option value="nil" >Area</option>
                  </select>
                  </div>
              </div>
        </div>
    
    <div class="row">
 
     <div class="input-group input-group-icon">
            <%= form.text_field :school_address, id: :school_school_address, placeholder: "School Adress"%>
          <div class="input-icon"><i class="fa fa-map-marker"></i></div>
        </div>
    </div>
    <div class="row">
      <h4>Admission Status</h4>
      <div class="input-group">
        <input type="radio" name="school[admission_status]" value="1" id="payment-method-card" checked="true"/>
