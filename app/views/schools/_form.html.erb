



<!DOCTYPE html>
<html >
<head>
  <meta charset="UTF-8">
  <title>Sign Up Form</title>
    <%=stylesheet_link_tag 'application' %>
  <%=stylesheet_link_tag 'school' %>
</head>

<body>

 
<div class="container">
<%= form_for school , validate: true do |form| %>
      <% if school.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(school.errors.count, "error") %> prohibited this school from being saved:</h2>

            <ul>
            <% school.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

    <div class="row">
      <h4> School Basic Info</h4>
      
      <div class="input-group input-group-icon">   
             <%= form.text_field :school_name, id: :school_school_name , placeholder: "School Name" ,validate: { presence: true, uniqueness: false }%>
        <div class="input-icon"><i class="fa fa-user"></i></div>
      </div>

      <div class="input-group input-group-icon">
          <%= form.text_field :school_description, id: :school_school_description, placeholder: "Short Overview"%>
        <div class="input-icon"><i class="fa fa-address-card-o"></i></div>
      </div>
      
      <div class="input-group input-group-icon">
            <%= form.text_field :school_website, id: :school_school_website, placeholder: "School Website"%>
          <div class="input-icon"><i class="fa fa-globe"></i></div>
        </div>
        
        <div class="input-group input-group-icon">
            <%= form.text_field :school_app, id: :school_school_app, placeholder: "Communication App URL"%>
          <div class="input-icon"><i class="fa fa-comments-o"></i></div>
        </div>
      
      <h4> Contact Info </h4>
      
      <div class="input-group input-group-icon">
        <%= form.text_field :school_email, id: :school_school_email , placeholder: "School Email" %>
        <div class="input-icon"><i class="fa fa-envelope"></i></div>
      </div>
      
      <div class="input-group input-group-icon">
          <%= form.text_field :school_telephone, id: :school_school_telephone , placeholder: "Telephone No." %>
