var giza = ['Giza and Pyramids','Imbaba','Harania','Dokki','Saft El Laban','Agouza','Faissal','Kitkat','Mansoureya','Mohandessin']

select1.onchange = function() {
    // empty select2
    while (select2.firstChild) {
        select2.removeChild(select2.firstChild);
    }


    if (select1.selectedIndex == 1) {
    for (var i = 0; i < cairo.length; i++) {
       var opt = cairo[i];
       var el = document.createElement("option");
       el.textContent = cairo[i];
       el.value = cairo[i];
       select2.appendChild(el);
    }}
    
    
    if (select1.selectedIndex == 2) {
    for (var i = 0; i < alex.length; i++) {
       var opt = alex[i];
       var el = document.createElement("option");
       el.textContent = alex[i];
       el.value = alex[i];
       select2.appendChild(el);
    }}
    
    if (select1.selectedIndex ==3) {
    for (var i = 0; i < giza.length; i++) {
       var opt = giza[i];
       var el = document.createElement("option");
       el.textContent = giza[i];
       el.value = giza[i];
       select2.appendChild(el);
    }}
    
    if (select1.selectedIndex >= 4) {
    
     
       var el = document.createElement("option");
       el.textContent = "All";
       el.value = "All";
       select2.appendChild(el);}
}
</script>
